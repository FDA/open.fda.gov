.data-view-toggle
  display: flex
  flex-direction: row
  margin-left: 40px
  cursor: pointer

  > div
    padding: 15px

  > div:first-child
    border-radius: 5px 0 0 5px

  > div:last-child
    border-radius: 0 5px 5px 0

  > .selected
    background-color: #017bba
    border: 1px solid #017bba
    color: white

  > .unselected
    border: 1px solid #cccccc

    i
      color: #00aaff

  span
    padding-left: 7px
    font-weight: 600