.dataset-explorer-content
  position: relative
  padding: 30px 0 30px 30px
  width: 75%
  background-color: #F2F5F7
  -webkit-transition: .3s
  -moz-transition: .3s
  -ms-transition: .3s
  -o-transition: .3s
  transition: .3s

  .blur
    filter: blur(1.5px)

  .ReactTable .-pagination input, .ReactTable .-pagination select
    padding: 5px 17px

  .ReactTable .rt-thead.-header
    padding-top: 8px

  .ReactTable .rt-thead .rt-tr
    text-align: left
    padding: 0

  .ReactTable .rt-table
    background-color: white

  .ReactTable .rt-thead.-filters
    box-shadow: 0 7px 15px 0 rgba(0,0,0,0.08)

  .ReactTable .rt-thead.-header
    box-shadow: none

  .ReactTable .rt-thead .rt-th, .ReactTable .rt-thead .rt-td
    padding: 5px 10px

  .ReactTable .rt-th, .ReactTable .rt-td
    padding: 12px 10px
    line-height: 1.2

  .ReactTable .rt-expander:after
    border-top: 7px solid #017bba

.dataset-table-menubar
  display: flex
  align-items: center
  justify-content: space-between
  padding-bottom: 35px

  > div:first-child
    display: flex

  .collapse-rows
    color: #017bba
    font-weight: bold
    text-align: center

    &:hover
      color: #0c509b

  .Select-placeholder, .Select--single > .Select-control .Select-value
    color: #333

.dataset-overlay
  background: rgba(0,0,0,0.5)
  position: absolute
  top: 0
  left: 0
  width: calc(100% + 30px)
  height: 100%
  z-index: 2