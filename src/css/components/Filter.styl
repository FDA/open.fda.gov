.filter-sidebar
  width: 23%
  padding: 30px 0px 20px 40px
  overflow-x: hidden
  float: left
  border-right: 1px
  border-right-style: solid
  border-right-color: #BFD4DF
  background-color: white
  color: #00517D
  -webkit-transition: .3s
  -moz-transition: .3s
  -ms-transition: .3s
  -o-transition: .3s
  transition: .3s

  p
    color: #00517D

.filter-sidebar::-webkit-scrollbar
  width: 6px
  height: 6px
  &-thumb
    background: $clrPrimary
  &-track
    background: $clrPrimaryAltLightest

.filter-input
  padding-right: 30px

  > input
    font-size: 10px
    height: 36px
    width: 100%
    border-radius: 3px
    border-style: solid
    border-width: 1px
    border-color: #BFD4DF
    padding-left: 10px

.filter-item-container
  margin-bottom: 10px

  h3
    margin-bottom: 10px

.filter-select
  margin-right: 30px

  .Select-control
    font-size: 10px
    height: 36px
    width: 100%
    border-radius: 3px
    border-style: solid
    border-width: 1px
    border-color: #BFD4DF

    > *:last-child
      padding-top: 5px

  .Select-menu-outer
    font-size: 10px
    width: 100%
    border-radius: 3px
    border-style: solid
    border-width: 1px
    border-color: #BFD4DF

.selected-filter
  display: flex
  padding-top: 10px

  button
    padding: 0

    span
      font-size: 16px
      padding-right: 10px

    i
      color: #ef4205
