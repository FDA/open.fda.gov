.filter-sidebar
  padding: 20px 0px 20px 40px
  height: 100%
  width: 300px
  float: left
  border-right: 1px
  border-right-style: solid
  border-right-color: #BFD4DF
  background-color: white
  color: #00517D

  p
    color: #00517D

.filter-input
  font-size: 10px
  height: 30px
  width: 250px
  border-radius: 3px
  border-style: solid
  border-width: 1px
  border-color: #BFD4DF


.filter-item-container
  margin-bottom: 10px
  h3
    margin-bottom: 10px

.filter-select > div
  font-size: 10px
  height: 30px
  width: 250px
  border-radius: 3px
  border-style: solid
  border-width: 1px
  border-color: #BFD4DF
