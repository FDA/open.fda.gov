.filter-sidebar
  padding: 30px 0px 20px 40px
  width: 23%
  float: left
  border-right: 1px
  border-right-style: solid
  border-right-color: #BFD4DF
  background-color: white
  color: #00517D

  p
    color: #00517D

.filter-input
  padding-right: 30px

  > input
    font-size: 10px
    height: 36px
    width: 100%
    border-radius: 3px
    border-style: solid
    border-width: 1px
    border-color: #BFD4DF
    padding-left: 10px

.filter-item-container
  margin-bottom: 10px

  h3
    margin-bottom: 10px

.filter-select
  padding-right: 30px

  > div
    font-size: 10px
    height: 36px
    width: 100%
    border-radius: 3px
    border-style: solid
    border-width: 1px
    border-color: #BFD4DF

    > *:last-child
      padding-top: 5px