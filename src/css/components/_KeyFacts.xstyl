.key-facts
  border-bottom: 1px solid #ccc
  line-height: 24px

.key-facts h3
  margin-bottom: 1.05rem

.key-facts li
  list-style: none
  margin: 0
  padding: 20px 0
  border-top: 1px solid #ccc
  display: flex
  align-items: center

.key-facts li i
  font-size: 32px
  text-align: center
  color: #00aaff
  width: 7%

.key-facts li .label
  font-weight: bold
  width: 28%
  margin-right: 3%

.key-facts li .value
  width: 62%


@media $tablet
  .key-facts li i
    display: none