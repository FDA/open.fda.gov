.doc-container
  width: 100%
  height: 100%

.sticky-padding
  padding-top: 76px

.fixed-padding
  padding-left: 16.8rem

.markdown-content
  padding: 2.1rem 1.05rem
  padding-bottom: 4.9rem
  display: block
  font-size: 17px
  line-height: 25.2px

  p, ul, ol, h1, h2, h3
    margin-bottom: 1.05rem

  h3
    margin-top: 2.1rem

  ul, ol
    margin-top: 1.05rem

  ul
    padding-left: 1.4rem

  li
    display: list-item
    list-style-type: disc
    list-style-position: outside
    margin-bottom: calc(1.05rem / 2)

.doc-content
  padding: 2.1rem 1.05rem
  padding-bottom: 4.9rem
  display: block
  font-size: 18px
  line-height: 25.2px

  > p, > ul, > ol, > h2, > h3
    margin-bottom: 1.05rem

  > h3
    margin-top: 2.1rem

  > ul, > ol
    margin-top: 1.05rem

    > li
      display: list-item
      font-size: 17px
      list-style-position: outside
      margin-bottom: calc(1.05rem / 2)

  > ul
    padding-left: 1.4rem

    > li
      list-style-type: disc

  > ol
    padding-left: 1rem

    > li
      list-style-type: decimal

  > section
    left: 0
    right: 0
    margin-left: auto
    margin-right: auto
    margin-bottom: 2.1rem
    margin-top: 4.2rem



@media $tablet
  .doc-container
    padding-left: 0
    padding-top: 44px



@media $bpTab
  .doc-content, .markdown-content
    margin-left: auto
    margin-right: auto
    max-width: 1100px
    width: 100%
