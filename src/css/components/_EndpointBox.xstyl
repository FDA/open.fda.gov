.ep-icon-container
  position: relative
  top: -20px
  box-shadow: 0 4px 6px rgba(0,0,0,0.1)
  border-radius: 50%
  background-color: white
  width: 105px
  height: 105px
  display: flex
  justify-content: center
  align-items: center

.ep-icon
  height: 100px
  width: 100px
  border-radius: 50%
  display: flex
  justify-content: center
  align-items: center

.ep-box
  width: 300px
  height: 315px
  text-align: center
  display: flex
  flex-direction: column
  justify-content: flex-end
  align-items: center
  border-radius: 5px
  box-shadow: inset 0 0 0 1px #ccc

  .btn
    margin-top: 10px
    margin-bottom: 10px

.endpoint-card
  background: #fff
  box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 9px
  transition: all 0.2s linear

.endpoint-card:hover
  box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px
  transform: translateY(-4px)

.ep-text-box
  height: 150px
  padding: 0 20px

  span
    line-height: 19px
    font-size: 0.9rem

.ep-text-box > div
  padding: 20px

@media $bpMob
  .ep-box
    width: 300px

  .ep-text-box
    padding: 0px 10px 10px 0px

  .ep-text-box > h3
    padding-top: 10px

  .ep-icon-container
    height: 90px
    width: 90px

  .ep-icon
    height: 85px
    width: 85px