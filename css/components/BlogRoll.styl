.blog-bg
  background-color: #F3F4F4
  display: flex
  flex-direction: column
  position: relative
  align-items: center
  padding: 0 2.5%

.blog-container
  display: flex
  flex-direction: row
  justify-content: space-evenly
  flex-wrap: wrap

.small-blog-container
  max-height: 310px

.blog-item
  width: 23%
  min-width: 320px
  box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 9px
  transition: all 0.2s linear
  border-radius: 6px
  background: white
  height: 250px

.blog-item:hover
  box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px
  transform: translateY(-4px)

.blog-header
  font-size: 18px
  line-height: 22px

.blog-text-item
  display: flex
  flex-direction: column