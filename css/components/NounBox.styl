.bg-img-container
  height: 180px
  overflow: hidden
  border-radius: 5px 5px 0px 0px

.bg-img-container > img
  margin-top: -40px
  mix-blend-mode: multiply

.icon
  height: 100px
  width: 100px
  border-radius: 50%
  display: flex
  justify-content: center
  align-items: center

.noun-box
  width: 280px
  height: 395px
  text-align: center
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  border-radius: 6px
  box-shadow: inset 0 0 0 1px #ccc

.noun-card
  box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 9px
  transition: all 0.2s linear

.noun-card:hover
  box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px
  transform: translateY(-4px)

.noun-text-box
  height: 215px
  border-radius: 0px 0px 5px 5px
  box-shadow: inset 0 0 0 1px #ccc

.noun-text-box > h3
  padding-top: 60px

.noun-text-box > div
  padding: 20px

.noun-text-box > span
  line-height: 19px
  font-size: 0.9rem
  padding: 0 15px

@media $bpMob
  .noun-text-box > h3
    padding-top: 40px