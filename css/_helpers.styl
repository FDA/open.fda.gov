/**
 * @desc color helperz
 * @returns color classes for every color in the hash
 */
for $key, $value in $uswds-colors
  .bg-{$key}
    background-color $value

  .hvr-bg-{$key}
    &.active,
    &:hover,
    &:active
      background-color $value

  .clr-{$key}
    color $value

  .hvr-clr-{$key}
    &.active,
    &:hover,
    &:active
      color $value

