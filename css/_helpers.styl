// Webkit hack to always show scrollbar
.always-show-scroll::-webkit-scrollbar
  appearance: none
  width: 7px

// style-ize it
.always-show-scroll::-webkit-scrollbar-track
  background-color: transparent

// style-ize it
.always-show-scroll::-webkit-scrollbar-thumb
  background-color: $clrPrimaryDarker

/**
 * Hide element visually, but leave it available for screenreaders
 * anything that gets toggled but needs to be accessible
 * is a good candidate for this instead of display none
 * $see http://open.blogs.nytimes.com/2014/06/24/improving-article-accessibility/
 */
.visually-hidden
  background: $clrWhite
  border: 0
  clip: rect(0 0 0 0)
  color: $clrPrimaryDarker
  height: 1px
  margin: -1px
  overflow: hidden
  padding: 0
  position: absolute
  width: 1px
  &:focus
    border: 1px solid
    clip: auto
    display: block
    height: auto
    margin: 0
    overflow: visible
    padding: 10px
    position: static
    width: auto

.select-wrap
  position: relative
  &:after
    absolute: top 12px right 10px
    background: url('/img/arrow-down.png') no-repeat
    background-size: auto 15px
    content: ''
    cursor: pointer
    display: block
    height: 15px
    pointer-events: none
    position: absolute
    // right: 10px
    // top: 12px
    width: 15px
    z-index: 2

// https://standards.usa.gov/sidenav/
// with modifications
.menu-item
  color: $clrBase
  border-radius: 0
  font-size: $pSize
  padding: 10px 10px 10px 0px
  text-align: left

  &.depth-2,
  &.depth-3
    font-size: $smallSize

  &.depth-2
    padding-left: 20px

  &.depth-3
    padding-left: 30px

  &.active
    color: $clrPrimary
    border-left: 4px solid $clrPrimary
    font-weight: bolder
    padding-left: 15px

  &:hover
    background-color: $clrGrayLightest

// normally we use the LinkExternal component for this
// but when parsing arbitrary markdown (ie, the content yamls)
// it's easier (and safer) to just do a string replace to add
// this class dynamically
.link-external
  &:after
    background-image: url('/img/i_external.png')
    content: ''
    display: inline-block
    size: 10px
    margin: 2px 5px

.line-clamp
  -webkit-box-orient: vertical
  -webkit-line-clamp: 3
  display: -webkit-box
  max-height: 80px

.responsive-header
  font-size: 1em
  font-weight: 300px

@media $bpMob
  .responsive-header
    font-size: 4.5vw
    font-weight: bold

@media $bpTabRange
  .responsive-header
    font-size: 22px